@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@{ /* Start - Added the following code inline with design - Athar - 27.03.2020 */}

<div class="container" id="asset-page-cont">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mt-2 text-center">Recover password</h2>
            <hr>
        </div>
    </div>
</div>
@{ /* End - Added the Above code inline with design - Athar - 27.03.2020 */}

<h1>@ViewData["Title"]</h1>
<h4>Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
