
@{
    ViewData["Title"] = "Register";
}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="mt-2 text-center">Register</h2>
                <hr>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form class="form-signin">
                    <br>
                    <h1 class="h3 mb-3 font-weight-normal">Enter your details to register</h1>
                    <div class="form-group">
                        <label for="inputEmail" class="">Email address</label>
                        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="">Password</label>
                        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="">Enter invitation code</label>
                        <input type="password" id="inputPassword" class="form-control" placeholder="Code" required="">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="">Enter captcha code below</label>
                        <input type="password" id="inputPassword" class="form-control" placeholder="asd2~2ASc" required="" disabled="">
                        <input type="text" id="inputPassword" class="form-control" placeholder="captcha code" required="">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

